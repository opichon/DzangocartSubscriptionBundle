{% trans_default_domain "dzangocart_subscription" %}

{{ form_start(form) }}

<h3>{% trans %}plan.edit.title{% endtrans %}</h3>

{{ form_errors(form) }}

{% for flashMessage in app.session.flashbag.get('plan.edit') %}
	<div class="alert alert-success">
		{{ flashMessage }}
	</div>
{% endfor %}

{{ form_row(form.name) }}

{{ form_row(form.description) }}

<div class="row">
	<div class='col-sm-6'>
		<strong>{{ 'plan.form.from.label' | trans }}</strong>
		{{ form_widget(form.start) }}
	</div>
	<div class='col-sm-6'>
		<strong>{{ 'plan.form.to.label' | trans }}</strong>
		{{ form_widget(form.finish) }}
	</div>
</div>

{{ form_row(form.save) }}

{{ form_end(form) }}
