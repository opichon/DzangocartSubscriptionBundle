{% spaceless %}

{% trans_default_domain "dzangocart_subscription" %}

<div class='btn-group'>
	<button type='button' class='dropdown-toggle' data-toggle='dropdown'>
		<i class='fa fa-cog'></i>
	</button>
	<ul class='dropdown-menu dropdown-menu-right navbar-right' role='menu'>
		<li>
			<a href="{{ path('dzangocart_subscription_plan', { id: plan.id }) }}">
				{% trans %}plan.plans.actions.show{% endtrans %}
			</a>
		</li>
		{% if plan.isDisabled %}
			<li>
				<a href="{{ path('dzangocart_subscription_plan_enable', { id: plan.id }) }}">
					{% trans %}plan.plans.actions.enable{% endtrans %}
				</a>
			</li>
		{% else %}
			<li>
				<a href="{{ path('dzangocart_subscription_plan_disable', { id: plan.id }) }}">
					{% trans %}plan.plans.actions.disable{% endtrans %}
				</a>
			</li>
		{% endif %}

		{% if plan.isDefaultForTrial %}
			<li>
				<a href="{{ path('dzangocart_subscription_plan_remove_default_for_trial', { id: plan.id }) }}">
					{% trans %}plan.plans.actions.removefortrial{% endtrans %}
				</a>
			</li>
		{% else %}
			<li>
				<a href="{{ path('dzangocart_subscription_plan_use_default_for_trial', { id: plan.id }) }}">
					{% trans %}plan.plans.actions.usefortrial{% endtrans %}
				</a>
			</li>
		{% endif %}
	</ul>
</div>
{% endspaceless %}
