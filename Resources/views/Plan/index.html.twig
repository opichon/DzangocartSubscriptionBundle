{% extends "DzangocartSubscriptionBundle:Admin:layout.html.twig" %}

{% block plan_page_title %}	
	<h2>{% trans from "plans" %}plans.list{% endtrans %}</h2>
{% endblock %}

{% block plan_content %}
<section class="dzangocart plans">
	<table class="list">
		<thead>
			<tr>
				<th class="check">
					<input type="checkbox" class="checkall" />
				</th>
				<th class="rank">{% trans from "plans" %}plan.rank{% endtrans %}</th>
				<th class="left name">{% trans from "plans" %}plan.name{% endtrans %}</th>
				<th class="left description">{% trans from "plans" %}plan.description{% endtrans %}</th>
				<th class="date">{% trans from "plans" %}plan.from{% endtrans %}</th>
				<th class="date">{% trans from "plans" %}plan.to{% endtrans %}</th>
				<th class="price">{% trans from "plans" %}plan.price{% endtrans %}</th>
				<th class="actions">{% trans from "plans" %}plan.actions{% endtrans %}</th>
			</tr>
		</thead>
		<tbody>
			{% for plan in plans %}
				<tr class="{% if plan.isDisabled %}disabled{% elseif plan.isInactive %}inactive{% elseif plan.isDefault %}default{%endif %}">
					<td><input type="checkbox" name="plan_ids[]" value="{{ plan.id }}" /></td>
	   				<td class="number">{{ plan.rank }}</td>
					<td><a href="{{ path('plan_show', { 'id': plan.id }) }}">{{ plan.name }}</a></td>
	   				<td>{{ plan.description }}</td>
					<td class="center">{% if plan.dateStart %}{{ plan.dateStart|date('Y-m-d H:i') }}{% endif%}</td>
					<td class="center">{% if plan.dateEnd %}{{ plan.dateEnd|date('Y-m-d H:i') }}{% endif%}</td>
					<td class="amount"></td>
					<td class="actions">
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</section>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/dzangocartsubscription/css/plan.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
