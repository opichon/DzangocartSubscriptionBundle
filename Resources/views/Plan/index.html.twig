{% extends "DzangocartSubscriptionBundle::admin.html.twig" %}

{% trans_default_domain "dzangocart_subscription" %}

{% block dzangocart_subscription_head_style %}
	{{ parent() }}
	<link href="{{ asset('bundles/dzangocartsubscription/css/plan.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block dzangocart_subscription_page_nav %}
	<a type='button' class='btn btn-default pull-right' href="{{ path('dzangocart_subscription_plan_create') }}">
		{% trans %}plans.nav.create{% endtrans %}
	</a>
{% endblock %}

{% block dzangocart_subscription_page_class %}plans{% endblock %}

{% block dzangocart_subscription_page_title %}{% trans %}plans.page_title{% endtrans %}{% endblock %}

{% block dzangocart_subscription_content %}
<table class="table table-condensed">
	<thead>
		<tr>
			<th class="rank">{% trans %}plans.rank{% endtrans %}</th>
			<th class="left name">{% trans %}plans.name{% endtrans %}</th>
			<th class="left description">{% trans %}plans.description{% endtrans %}</th>
			<th class="date">{% trans %}plans.from{% endtrans %}</th>
			<th class="date">{% trans %}plans.to{% endtrans %}</th>
			<th class="price">{% trans %}plans.price{% endtrans %}</th>
			<th class="actions">{% trans %}plans.actions.title{% endtrans %}</th>
		</tr>
	</thead>
	<tbody>
		{% for plan in plans %}
			<tr class="{% if plan.isDisabled %}disabled{% elseif plan.isInactive %}inactive{% elseif plan.isDefault %}default{%endif %}">
				<td class="number">{{ plan.rank }}</td>
				<td><a href="{{ path('dzangocart_subscription_plan_show', { 'id': plan.id }) }}">{{ plan.name }}</a></td>
				<td>{{ plan.description }}</td>
				<td>{% if plan.start %}{{ plan.start|date('Y-m-d H:i') }}{% endif%}</td>
				<td>{% if plan.finish %}{{ plan.finish|date('Y-m-d H:i') }}{% endif%}</td>
				<td class="amount"></td>
				<td class="actions">{% include "DzangocartSubscriptionBundle:Plan:actions.html.twig" %}</td>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>
{% endblock %}

