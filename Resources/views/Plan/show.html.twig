{% extends "DzangocartSubscriptionBundle::admin.html.twig" %}

{% trans_default_domain "dzangocart_subscription" %}

{% block dzangocart_subscription_head_style %}
{% endblock %}

{% block dzangocart_subscription_page_nav %}
	<a href="{{ path('dzangocart_subscription_plans') }}">{% trans %}plan.show.cancel{% endtrans %}</a>
{% endblock %}

{% block dzangocart_subscription_page_title %}
	{% trans with { '%plan%': plan.name } %}plan.show.page_title{% endtrans %}
{% endblock %}

{% block dzangocart_subscription_content %}
<section class="dzangocart plans">
	<table class="show plan">
		<tbody>
			<tr>
				<th>{% trans %}subscription.plan.name{% endtrans %}</th>
				<td>{{ plan.name }}</td>
			</tr>
			<tr>
				<th>{% trans %}subscription.plan.description{% endtrans %}</th>
				<td>{{ plan.description }}</td>
			</tr>
			<tr>
				<th>{% trans %}subscription.plan.available_from{% endtrans %}</th>
				<td>{{ plan.start ? plan.start|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>{% trans %}subscription.plan.available_until{% endtrans %}</th>
				<td>{{ plan.finish ? plan.finish|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>{% trans %}subscription.plan.price{% endtrans %}</th>
				<td>{# plan.price #}</td>
			</tr>
			<tr>
				<th>{% trans %}subscription.plan.default{% endtrans %}</th>
				<td>
					{% if plan.isDefault %}<img src="{{ asset('bundles/dzangocartsubscription/images/tick.png') }}" />{% endif %}
				</td>
			</tr>
		</tbody>
	</table>
</section>
{% endblock %}
