{% extends "DzangocartSubscriptionBundle::frontend.html.twig" %}

{% trans_default_domain "dzangocart_subscription" %}

{% block dzangocart_subscription_head_style %}
	{{ parent() }}
	{% stylesheets filter="cssrewrite"
		'bundles/dzangocartsubscription/css/pricing.css'
	%}
		<link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
		<link href="{{ asset('bundles/dzangocartsubscription/css/pricingThemes/'~ theme ~'.css') }}" type="text/css" rel="stylesheet" media="screen"/>
	{% endstylesheets %}
{% endblock %}

{% block dzangocart_subscription_page_class %}{{ theme }}{% endblock %}

{% block dzangocart_subscription_content %}
	{{ render(controller("dzangocart_subscription.pricing_controller:pricingAction")) }}
{% endblock %}
